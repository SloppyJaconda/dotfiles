{
    "layer": "top",
    "spacing": 10,
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap",
        "clock"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "idle_inhibitor",
        "power-profiles-daemon",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "custom/power"
    ],
    "custom/power": {
